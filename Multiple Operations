#include<stdio.h>
int main()
 {
    float a,b, c;
    printf("Enter the 1st number: ");
    scanf("%f",&a);

    printf("Enter the 2nd Number: ");
    scanf("%f",&b);
     
    c = a + b;
    printf("%.2f + %.2f = %.2f\n",a,b,c);
    
    c = a / b;
    printf("%.2f / %.2f = %.2f\n",a,b,c);
    
    c = a * b;
    printf("%.2f * %.2f = %.2f\n",a,b,c);
    
    c = a - b;
    printf("%.2f - %.2f = %.2f\n",a,b,c);
    
    return 0;
 }
